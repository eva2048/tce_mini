/**index.wxss**/
.refresh-block {  
  text-align: center;
  background: #fff;
  background: #0097ff
}  
.refresh-block image {  
  width: 30px;  
  height: 30px;  
} 
.loading-block {  
  text-align: center;
}
.loading-block image {  
  width: 30px;  
  height: 30px;  
} 
.nomore{
  text-align: center;
  padding-bottom: 10rpx;
  color: #b4b4b4;
}
.bugheader{
  width: 100%;
  box-sizing: border-box;
  flex-direction: column;
  background: #0097ff;
  position: fixed;
  z-index: 100;
  padding-bottom: 20rpx;
}
.bugheader .projectInfo{
  color: #fff;
  font-size: 32rpx;
  position: relative;
  margin-top: 11px;
  display: flex;
  padding: 0 25rpx;
  align-items: center; 
}
.bugheader .projectInfo .projectName{
  overflow: hidden;
  flex-grow:1;
  box-sizing: border-box;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  padding-right: 60rpx;
  margin-top: -2px;
  
}
.bugheader .projectInfo .projectState{
  flex-shrink: 0;
  color: #52250a;
  font-size: 12px;
  background: #ffe142;
  padding: 2px 10rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
}
.bugheader .projectInfo .viewreport{
  flex-shrink: 0;
  font-size: 12px;
  border-radius: 6rpx;
  white-space: nowrap;
  border: 1px solid #fff;
  padding: 2px 10rpx;
}

.bugheader .searchBox{
  margin: 10px 20rpx;
  padding: 10px 20px;
  box-sizing: border-box;
  border-radius: 50rpx;
  color:#424242;
  background: #fff;
  display: flex;
  align-items: center;
}
.bugheader .searchBox icon{
  margin-right: 10rpx;
  vertical-align: middle
}
.bugheader .searchBox .searchString{
  width: 500rpx;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/*筛选*/
/*筛选悬停*/

.filterBox{
  justify-content:space-around;
  background:#fff;
  border:1px solid #eee;
  position: fixed;
  top: 90px;
  width: 100%;
  z-index: 100;
}
.filterBoxTop{
  position: fixed;
  top: 2px;
  width: 100%;
}
.filterBox .filterItem{
  color:#666;
  line-height: 40px;
}
.filterBox .filterItem .filterIcon{
  width: 8px;
  height: 4px;
  vertical-align: text-top;
  margin-top: 6px;
  margin-left:10rpx;
}
.filterBox .filterItem .filterIcon1{
  width: 10px;
  height: 10px;
  vertical-align: text-top;
  margin-top: 10rpx;
  margin-left:10rpx;
}
.bugList{
  flex-direction: column;
  padding-top: 132px;
  z-index: 1;
  box-sizing: border-box;
}
.bugList .bugItem{
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 20rpx;
  width: 100%;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.bugList .bugItem .itemLine{
  position: relative
}
.bugList .bugItem .itemLine .bugId{
  float: left;
  color: #52250a;
  font-size: 9px;
  font-weight: bold;
  background: #ffe142;
  border-radius: 3rpx;
  padding: 3px 15rpx;
  margin-right: 20rpx;
}
.bugList .bugItem .bugNamebox{
  align-items: center;
}
.bugList .bugItem .itemLine .bugName{
  float: left;
  font-size: 15px;
  color: #434343;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block
}
.bugList .bugItem .itemLine .itemInfo{
  float: left;
  line-height: 80rpx;
  width: 50%;
  font-size: 12px;
}
.bugList .bugItem .itemLine .itemInfo2{
  float: left;
  line-height: 80rpx;
  width: 45%;
}
.bugList .bugItem .itemLine .itemInfo3{
  float: left;
  line-height: 80rpx;
  width: 55%;
}
.bugList .bugItem .itemLine .itemInfo .itemInfogray{
  color: #a6a6a6;
  max-width: 65%;
  float: left;
  font-size: 12px;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}
.bugList .bugItem .itemLine .levelSpan{
  padding: 5rpx 20rpx;
  border: 1px solid #0097ff;
  color: #0097ff;
  margin-right: 15rpx;
  display: inline-block;
  border-radius: 4rpx;
  font-size: 12px;
}
.bugList .bugItem .itemLine .stateSpan{
  background: #0097ff;
  color: #fff;
}
.bugList .bugItem .itemLine .itemImg{
  width: 40rpx;
  height: 40rpx;
}
.bugList .bugItem .itemFooter{
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}
/*多选筛选*/
.multSelectBox{
  background: #fff;
}
.multSelectBox .multSelectTitle{
  background: #fbfbfb;
  padding: 24rpx 0rpx;
  color: #545454;
}
.multSelectBox .multSelectTitle .title{
  border-left: 6rpx solid #0097ff;
  padding-left: 20rpx;
}
.multSelectBox .multSelectUl{
  padding: 20rpx 5rpx 5px 20rpx;
}
.multSelectBox .multSelectUl .selectSpan{
  padding: 10rpx 20rpx;
  border: 1px solid #bbb;
  color: #545454;
  border-radius: 4rpx;
  display: inline-block;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}
.multSelectBox .multSelectUl .selectedSpan{
  border-color: #0097ff;
  color: #0097ff;
}
.coverBox .selectBtnBox{
  background: #fff;
  border-top: 1px solid #eee;
}
.coverBox .selectBtnBox .clearbtn{
  background: none;
  border: none;
  outline: none;
  font-size: 22rpx;
  line-height: 88rpx;
  color: #545454;
}
.coverBox .selectBtnBox button::after{
  display: none;
}
.coverBox .selectBtnBox .okbtn{
  background: #0097ff;
  border: none;
  outline: none;
  font-size: 30rpx;
  line-height: 88rpx;
  border-radius: 0;
  padding: 0 70rpx;
  color: #fff;
}

